<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.zendynamix.tracckAndroidUI">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FLAG_GRANT_READ_URI_PERMISSION"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <uses-featur
        android:name="android.hardware.camera"
        android:required="false"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.zendynamix.tracckAndroidUI.TrackItemMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.zendynamix.tracckAndroidUI.ProductDetailActivity"
            android:parentActivityName="com.example.zendynamix.tracckAndroidUI.TrackItemMainActivity">
        </activity>
        <activity
            android:name="com.example.zendynamix.tracckAndroidUI.ProdAndPurchActivity"
            android:parentActivityName="com.example.zendynamix.tracckAndroidUI.ProductDetailActivity">
        </activity>
        <activity
            android:name="com.example.zendynamix.tracckAndroidUI.ImagePagerActivity"
            android:parentActivityName="com.example.zendynamix.tracckAndroidUI.ProductDetailActivity"
            android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
    </application>
</manifest>